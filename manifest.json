{
  "manifest_version": 3,
  "default_locale": "en",
  "name": "Warcraft Logs Skill Tracker",
  "version": "1.0",
  "description": "Track and manage your Warcraft Logs skills directly from your browser.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.warcraftlogs.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Skill Tracker"
  },
  "options_ui": {
    "page": "index.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
